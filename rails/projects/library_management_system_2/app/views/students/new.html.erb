    <div id="form-area">
      <h1>ADD NEW STUDENT</h1>
      <form action = "/students/create" method = "post"  id="student">
        <label for="name" id = "heading"><b>Enter Your Name</b></label>
        <input type="text" placeholder="Enter Your Name" name="name" id="name" required/><br><br>
        <br clear="all">

        <label for="city" id = "heading"><b>Select Your Current City</b></label>
        <select name="city" id="city" required>
          <option value="Gurugram">Gurugram</option>
          <option value="Faridabad">Faridabad</option>
          <option value="Delhi">Delhi</option>
          <option value="Noida">Noida</option>
          <option value="Ghaziabad">Ghaziabad</option>
        </select>
        <br><br><br clear="all">

        <label for="mobile" id = "heading"><b>Enter Your Moblie No.</b></label>
        <input type="tel" placeholder="Enter Your Mobile No." name="mobile" id="mobile" required/><br><br>
        <br clear="all">

        <label for="section_id" id="heading"><b>Select Your Section</b></label>
        <select name="section_id" id="section_id" required>
          <option value=5>Eighth</option>
          <option value=1>Ninth</option>
          <option value=2>Tenth</option>
          <option value=3>Eleventh</option>
          <option value=4>Twelfth</option>
        </select>
        <br><br><br clear="all">

        <label for="sex" id="heading"><b>Select Your Sex</b></label>
        <div id="sex">
          <input type="radio" id="male" name="sex" value="male">
          <label for="male">Male</label>
          <input type="radio" id="female" name="sex" value="female">
          <label for="female">Female</label>
          <br><br>
        </div><br clear="all">

        <label for="dob" id="heading"><b>Select Your Date of Birth</b></label>
        <input type="date" id="dob" name="dob" value="dob" required/><br><br>
        <br clear="all">

        <label for="email" id="heading"><b>Enter Your Email</b></label>
        <input type="email" id="email" name="email" placeholder="email" required/><br><br>
        <br clear="all">

